{
    "name": "sharryy/shipyard",
    "description": "A package to effortlessly interact with Docker Engine API",
    "keywords": [
        "sharryy",
        "shipyard"
    ],
    "homepage": "https://github.com/sharryy/shipyard",
    "license": "MIT",
    "authors": [
        {
            "name": "Sharryy",
            "email": "ibneadam388@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Sharryy\\Docker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sharryy\\Docker\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
